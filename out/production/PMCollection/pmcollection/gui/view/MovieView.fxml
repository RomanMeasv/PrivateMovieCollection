<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pmcollection.gui.controller.MovieController">
  <columnConstraints>
    <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="290.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="795.0" minWidth="10.0" prefWidth="712.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints prefHeight="500.0" vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TableView fx:id="categoryTBV" prefHeight="200.0" prefWidth="200.0">
         <columns>
            <TableColumn fx:id="categoryNameColumn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="290.0" text="name" />
         </columns></TableView>
      <TableView fx:id="movieTBV" onMouseClicked="#movieTableClick" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
         <columns>
            <TableColumn fx:id="movieTBVName" maxWidth="1.7976931348623157E308" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="movieTBVRating" maxWidth="1.7976931348623157E308" prefWidth="100.0" text="Rating" />
            <TableColumn fx:id="movieTBVCategories" maxWidth="1.7976931348623157E308" prefWidth="300.0" text="Categories" />
         </columns></TableView>
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
         <children>
            <Button maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#categoryAdd" prefHeight="55.0" text="Add Category" />
            <Button maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#categoryEdit" prefHeight="55.0" text="Edit Category" />
            <Button maxHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#categoryRemove" prefHeight="55.0" text="Remove Category" />
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#movieAdd" text="Add Movie" />
                  <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#movieEdit" text="Edit Movie" />
                  <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#movieRemove" text="Remove Movie" />
               </children>
            </HBox>
            <HBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="20.0" prefWidth="200.0" />
            <HBox>
               <children>

                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="nameFilterField" promptText="name filter" VBox.vgrow="ALWAYS" />
                        <TextField fx:id="categoryFilterField" editable="false" promptText="category filter (separate with comma)" />
                        <HBox>
                           <children>
                              <TextField fx:id="ratingMinField" promptText="rating from (min)" />
                              <TextField fx:id="ratingMaxField" promptText="rating to (max)" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox prefHeight="59.0" prefWidth="100.0">
                     <children>
                        <Button maxWidth="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#filterHandle" prefHeight="25.0" prefWidth="100.0" text="FILTER" />
                        <Button maxWidth="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#editCategoryFilter" prefHeight="25.0" prefWidth="100.0" text="choose..." />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>
