<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pmcollection.gui.controller.MovieController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints prefHeight="500.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="-Infinity" prefHeight="100.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TableView fx:id="categoryTBV" prefHeight="200.0" prefWidth="200.0">
         <columns>
            <TableColumn fx:id="categoryNameColumn" prefWidth="499.0" text="name" />
         </columns></TableView>
      <TableView fx:id="movieTBV" onMouseClicked="#movieTableClick" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
         <columns>
            <TableColumn fx:id="movieTBVName" prefWidth="180.79998779296875" text="Name" />
            <TableColumn fx:id="movieTBVRating" prefWidth="75.0" text="Rating" />
            <TableColumn fx:id="movieTBVCategories" prefWidth="243.199951171875" text="Categories" />
         </columns></TableView>
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
         <children>
            <Button mnemonicParsing="false" onAction="#categoryAdd" text="Add Category" />
            <Button mnemonicParsing="false" onAction="#categoryEdit" text="Edit Category" />
            <Button mnemonicParsing="false" onAction="#categoryRemove" text="Remove Category" />
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <HBox>
               <children>

                  <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="nameFilterField" promptText="name filter" VBox.vgrow="ALWAYS" />
                        <TextField fx:id="categoryFilterField" promptText="category filter (separate with comma)" />
                        <TextField fx:id="ratingFilterField" promptText="rating filter (from-to)" />
                     </children>
                  </VBox>
                  <Button maxWidth="-Infinity" minHeight="-Infinity" minWidth="50.0" mnemonicParsing="false" onAction="#filterHandle" prefHeight="75.0" prefWidth="70.0" text="filter" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#movieAdd" text="Add Movie" />
                  <Button mnemonicParsing="false" onAction="#movieEdit" text="Edit Movie" />
                  <Button mnemonicParsing="false" onAction="#movieRemove" text="Remove Movie" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
